{
  "name": "ytmfvp",
  "version": "0.1.0",
  "description": "Your The Most Favorite Video Player - A powerful local video player and manager",
  "main": "main.js",
  "author": "galaxy8691",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder build --linux"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "chokidar": "^4.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "get-video-duration": "^4.1.0"
  },
  "build": {
    "appId": "com.galaxy8691.ytmfvp",
    "productName": "YTMFVP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "win": {
      "target": ["portable"]
    },
    "portable": {
      "artifactName": "YTMFVP-portable.exe"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/ffmpeg/**/*",
      "node_modules/fluent-ffmpeg/**/*"
    ]
  }
}
